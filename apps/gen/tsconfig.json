{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "skipLibCheck": true,
    "lib": [
      "ES2022"
    ],
    "types": [
      "node",
      "bun"
    ]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
