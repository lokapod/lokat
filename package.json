{
  "name": "root",
  "version": "0.0.0",
  "description": "Agnostic ultra-lightweight i18n",
  "license": "MIT",
  "private": true,
  "type": "module",
  "homepage": "https://github.com/lokapod/lokat",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lokapod/lokat.git"
  },
  "author": "Kazviz <kaz@kazviz.com> (https://kazviz.com)",
  "bugs": {
    "url": "https://github.com/lokapod/lokat/issues"
  },

  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean",

    "check": "biome check && dprint check",
    "format": "biome check --write && dprint fmt",

    "test": "turbo run test --continue",
    "bench": "bun run bench/tools/run-all.ts && bun run bench/tools/aggregate.ts",
    "coverage": "turbo run test --continue -- --coverage",

    "ci": "bun run clean && bun run build && bun run check && bun run test",

    "postinstall": "lefthook install"
  },

  "packageManager": "bun@1.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bun": "^1.3.5",
    "dprint": "^0.51.1",
    "lefthook": "^2.0.2",
    "packlet": "^0.3.3",
    "turbo": "^2.7.2",
    "typescript": "^5.9.3"
  },

  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
